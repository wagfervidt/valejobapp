{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": [
            "es2018",
            "dom"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "inlineSourceMap": true,
        "noEmitOnError": false,
        "noEmitHelpers": true,
        "baseUrl": ".",
        "plugins": [{
            "transform": "@nativescript/webpack/dist/transformers/NativeClass",
            "type": "raw"
        }]
    },
    "exclude": [
        "node_modules"
    ]
}
